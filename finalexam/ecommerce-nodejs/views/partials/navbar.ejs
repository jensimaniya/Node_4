<nav style="
  background: linear-gradient(90deg, #5838af, #4e4888);
  padding:14px 28px;
  color:white;
  display:flex;
  justify-content:space-between;
  align-items:center;
  font-family: 'Poppins', sans-serif;
  box-shadow:0 3px 10px rgba(0,0,0,0.25);
  position:sticky;
  top:0;
  z-index:100;
">

  <!-- LEFT -->
  <div style="display:flex; gap:20px; align-items:center;">
    <a href="/products" 
       style="color:white;font-weight:600;font-size:22px;text-decoration:none;letter-spacing:1px;">
      ðŸ›’ MyStore
    </a>

    <a href="/products" 
       style="color:white;text-decoration:none;font-size:16px;padding:6px 10px;border-radius:6px;transition:0.2s;"
       onmouseover="this.style.background='rgba(255,255,255,0.18)'"
       onmouseout="this.style.background='transparent'">
      All Products
    </a>
  </div>

  <!-- RIGHT -->
  <div style="display:flex; gap:18px; align-items:center;">

    <% if(isAuthenticated){ %>

      <a href="/products/my" 
         style="color:white;text-decoration:none;font-size:16px;padding:6px 10px;border-radius:6px;transition:0.2s;"
         onmouseover="this.style.background='rgba(255,255,255,0.18)'"
         onmouseout="this.style.background='transparent'">
        My Products
      </a>

      <a href="/products/create" 
         style="color:white;text-decoration:none;font-size:16px;padding:6px 10px;border-radius:6px;transition:0.2s;"
         onmouseover="this.style.background='rgba(255,255,255,0.18)'"
         onmouseout="this.style.background='transparent'">
        Add Product
      </a>

      <a href="/categories" 
         style="color:white;text-decoration:none;font-size:16px;padding:6px 10px;border-radius:6px;transition:0.2s;"
         onmouseover="this.style.background='rgba(255,255,255,0.18)'"
         onmouseout="this.style.background='transparent'">
        Categories
      </a>

      <form method="post" action="/logout" style="display:inline;">
        <button type="submit" 
          style="
            background:rgba(255,255,255,0.25);
            border:none;
            color:white;
            padding:7px 16px;
            border-radius:8px;
            cursor:pointer;
            font-size:15px;
            font-weight:500;
            transition:0.2s;
          "
          onmouseover="this.style.background='rgba(255,255,255,0.40)'"
          onmouseout="this.style.background='rgba(255,255,255,0.25)'"
        >
          Sign Out
        </button>
      </form>

    <% } else { %>

      <a href="/login" 
         style="color:white;text-decoration:none;font-size:16px;padding:6px 10px;border-radius:6px;transition:0.2s;"
         onmouseover="this.style.background='rgba(255,255,255,0.18)'"
         onmouseout="this.style.background='transparent'">
        Login
      </a>

      <a href="/register" 
        style="
          background:white;
          color:#0b6b3a;
          padding:7px 16px;
          border-radius:8px;
          text-decoration:none;
          font-size:16px;
          font-weight:bold;
          transition:0.2s;
        " 
        onmouseover="this.style.opacity='0.85'"
        onmouseout="this.style.opacity='1'">
        Register
      </a>

    <% } %>

  </div>

</nav>
